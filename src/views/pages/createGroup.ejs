    <body>
        <div class="loading">
            <div class="loading__container">
                <img
                    src="/assets/images/Ticket_Icon.svg"
                    alt="TicketFest Icon"
                />

                <div class="lds-dots">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
            <span class="brand">
                <h4>Powered By</h4>
                <h3>Kybera</h3>
            </span>
        </div>

        <%- include('../partials/header') %>

        <main>
            <div class="header__container">
                <div class="message">
                    <h1>
                        Crear<br />
                        <span>Nuevo Grupo</span>
                    </h1>
                    <img
                        src="/assets/images/Ticket_Icon.svg"
                        alt="TicketFest Icon"
                    />
                </div>
                <div class="actualDate">
                    <p>5 de Setiembre de 2022</p>
                </div>
            </div>
            <div class="card__container">
                <form
                    action="/groups/addGroup"
                    method="post"
                    class="card createGroup"
                >
                    <div class="input">
                        <input
                            class="input__input"
                            type="text"
                            name="groupName"
                            autocomplete="off"
                            placeholder=" "
                            required
                        />
                        <label for="groupName" class="input__label"
                            >Nombre del Grupo</label
                        >
                    </div>
                    <button type="submit" class="add-btn">
                        <i class="fa-solid fa-person-circle-plus"></i> Crear
                        Grupo
                    </button>
                    <p class="belowMessage">
                        Únete a un grupo, haciendo click
                        <a href="/groups/joinGroup">aquí</a>.
                    </p>
                    <p class="message">
                        <i class="fa-solid fa-circle-info"></i> Este grupo
                        generará un codigo de invitación unico para que todos
                        los miembros del mismo puedan unirse a través de esta
                        aplicación.
                    </p>
                </form>
            </div>
        </main>

        <%- include('../partials/navigation') %>
    </body>
</html>
